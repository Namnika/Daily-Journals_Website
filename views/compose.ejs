<%- include("partials/header")%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off">
  </div>

  <div class="form-group">
    <label for="post">Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="80" autocomplete="off"></textarea>
    <button type="submit" style="margin-top: 20px;" class="btn btn-primary">Publish</button>
  </div>

</form>

<%- include("partials/footer")%>
